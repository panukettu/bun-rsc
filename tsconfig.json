{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"resolvePackageJsonExports": true,
		"noEmit": true,

		/* Linting */
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": "./",
		"rootDir": ".",
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"types": ["bun", "react/experimental"],
		"paths": {
			"@pkxp/bun-rsc/*": ["dist/client/*"]
		}
	},
	"include": [
		"src/**/*",
		"vendor",
		"build.ts",
		"links.ts",
		"configs.ts",
		"temp/configs-build-prod.ts",
		"temp/server-entry-prod.ts"
	]
}
