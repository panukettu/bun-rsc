{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "**/*.development.js",
      "**/*.min.js"
    ]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "style": {
        "noParameterAssign": "off"
      },
      "complexity": {
        "noForEach": "off",
        "useRegexLiterals": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noAssignInExpressions": "off"
      }
    }
  }
}